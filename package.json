{
  "name": "design-system",
  "version": "1.0.0",
  "description": "Enterprise-grade design system with WCAG 2.1 AA/AAA compliance",
  "main": "dist/js/tokens.js",
  "scripts": {
    "test": "npm run test:contrast && npm run test:a11y && npm run test:storybook",
    "test:contrast": "node scripts/contrast-checker.js",
    "test:a11y": "node scripts/a11y-validator.js",
    "test:storybook": "test-storybook",
    "test:storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npm run build-storybook -- --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:127.0.0.1:6006 && npm run test:storybook\"",
    "build": "npm run build:tokens && npm run build:css",
    "build:tokens": "node scripts/build-tokens.js",
    "build:css": "node scripts/generate-css.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "generate": "node scripts/generate-component.js",
    "generate:component": "node scripts/generate-component.js",
    "generate:quick": "node scripts/quick-generate.js",
    "merge-tokens": "node scripts/merge-tokens.js",
    "tokens:validate": "node scripts/validate-tokens.js",
    "tokens:audit": "node scripts/audit-token-references.js",
    "tokens:backup": "cp component.json component.json.backup && cp functional.json functional.json.backup",
    "tokens:check": "npm run tokens:validate && npm run tokens:audit"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "wcag",
    "accessibility",
    "a11y",
    "w3c"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-links": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@storybook/test": "^9.0.0-alpha.2",
    "@storybook/test-runner": "^0.23.0",
    "chalk": "^5.6.2",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "handlebars": "^4.7.8",
    "http-server": "^14.1.1",
    "inquirer": "^12.9.6",
    "ora": "^9.0.0",
    "prettier": "^3.1.0",
    "storybook": "^9.1.10",
    "vite": "^5.0.0",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
