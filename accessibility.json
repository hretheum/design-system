    "background": {
      "default": { "value": "{neutral.0}", "type": "color" },
      "selected": { "value": "{color.blue.700}", "type": "color" }
    },
    "text": {
      "default": { "value": "{neutral.950}", "type": "color" },
      "link": { "value": "{color.blue.700}", "type": "color" }
    }
  },
  "skipLink": {
    "position": {
      "hidden": { "top": { "value": "-9999px", "type": "dimension" } },
      "visible": { "top": { "value": "0", "type": "dimension" } }
    },
    "zIndex": { "value": "{zIndex.tooltip}", "type": "number" }
