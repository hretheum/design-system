  "link": {
    "underline": {
      "thickness": { "value": "2px", "type": "dimension" },
      "offset": { "value": "2px", "type": "dimension" }
    }
  },
  "text": {
    "size": {
      "minimum": { "value": "16px", "type": "dimension", "description": "WCAG recommended minimum" }
    },
    "lineHeight": {
      "minimum": { "value": 1.5, "type": "number", "description": "WCAG 1.4.8 minimum" }
    }
  }
